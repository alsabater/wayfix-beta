#am_or_pm {
  float: left;
}

.events_buttons {
  margin-top: 6px;
  text-align: center;
}

#events .calendar{
  border-collapse: collapse;
}

#events .calendar .notmonth {
  color: #CCC; 
}
#events .calendar .today { 
  color: red;
}

#events .calendar td, th {
    font-family: "Lucida Grande", arial, helvetica, sans-serif;
    font-size: 10px;
    padding: 6px;
    border: 1px solid #999;
}

#events .calendar th {
    color: #666;
    text-align: center;
    width: 145px;
}

#events .calendar td {
    color: #777;
    height: 100px;
    vertical-align: top;
    font-size: 16px;
}

.very_heavy {
  background-color: #346178;
  color: #777;
  height: 100px;
  vertical-align: top;
  font-size: 16px;
}

.heavy {
  background-color: #5eafd8;
  color: #777;
  height: 100px;
  vertical-align: top;
  font-size: 16px;
}

.moderated {
  background-color: #87cff3;
  color: #777;
  height: 100px;
  vertical-align: top;
  font-size: 16px;
}

.light {
  background-color: #b4e1f7;
  color: #777;
  height: 100px;
  vertical-align: top;
  font-size: 16px;
}

.very_light {
  background-color: #d2edfa;
  color: #777;
  height: 100px;
  vertical-align: top;
  font-size: 16px;
}


#events h3 {
  text-align: center;
}

#events {
    text-decoration: none;
    color: black;
}

#events ul {
  font-size: 11px;
  padding-left: 20px;
}

#today_events {
  float: right;
}

#events_table {
  margin: 0;
  float: left;
  width: 1000px;
}

.filter {
  float: right;
  margin-left: 1px;
  width: 170px;
}

.alert {
  text-align: center;
  width: 250px;
  margin: auto;
  margin-top: 10px;
  background-color: #5FB0D3;
  color: white;
  border-radius: 5px;
}

.ui-autocomplete {
  z-index: 2000;
}

#day_agenda {
  border: 1px solid #bbb;
  text-align: center;
  font-size: inherit;
  font-weight: normal;
  color: #646464;
  max-height: 500px;
}

#day_agenda td {
  padding: 0px;
  margin: 0px;
}

#day_agenda td, tr {
  display: table-cell;
  vertical-align: inherit;
}


#day_agenda_hours tr {
  padding: 0px;
  margin: 0px;
  border-right: 1px solid #bbb;
  border-bottom: 1px solid #bbb;
}

#day_agenda_cells tr {
  border-bottom: 1px solid #bbb;
}

