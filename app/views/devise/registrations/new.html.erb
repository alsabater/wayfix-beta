<div id="log_in_form">
  <h3>Registro de administrador</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.email_field :email, class:"form-control", autofocus: true, placeholder:"Email" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class:"form-control", autocomplete: "off", placeholder:"Contraseña (8 caracteres mínimo)" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off", placeholder:"Confirmar contraseña" %>
    </div>

    <div class="text-center">
      <%= f.submit "Siguiente", class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>