<div class="modal fade" id="modal-event" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Nuevo evento</h4>
      </div>
      <%= form_for @event, id:"form-event", remote: true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <div class="row">
            <div class="col-xs-6">
              <%= f.text_field :patient_name, class:"form-control", placeholder:"Nombre paciente" %>
            </div>
            <div class="col-xs-6">
              <%= f.text_field :patient_surname, class:"form-control", placeholder:"Apellidos paciente" %>
            </div>
          </div></br>
          <div class="row">
            <div class="col-xs-4">
              <%= f.date_field :date, class:"form-control", placeholder:"Fecha" %>
            </div> <!-- col-xs-4 -->
            <div class="col-xs-3">
              <%= f.time_field :hour_minute, class:"form-control" %> </br>
            </div> <!-- col-xs-3 --> 
          </div> <!-- row -->
          <div class="row">
            <div class="col-xs-9">
              <%= f.text_area :observation, class:"form-control", placeholder:"Observaciones" %>
            </div> <!-- col-xs-9 -->
            <div class="col-xs-3">
              <%= f.select(:reason, ['Revisión','Cirugía','Urgencia', 'Nuevo'], {}, {:class => "form-control"}) %>
            </div> <!-- col-xs-3 -->
          </div> <!-- row -->
        </div> <!-- form-group -->
      </div>
      <div class="modal-footer">
        <%= f.submit "Añadir", class:"form-control btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


